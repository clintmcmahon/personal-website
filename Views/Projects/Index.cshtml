@{
  ViewData["Title"] = "Projects | Clint McMahon";
}
<section class="projects py-5">
  <div class="container">
    <h2 class="text-center mb-4">Projects</h2>
    <div class="row mb-4">
      <div class="col-12 text-center">
        A collection of side projects born from curiosity, creativity, and the drive to build something useful.
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <!-- Project Card 1 -->
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="/images/2025/weather_web.png" alt="Today's Record High Website" />
          <div class="card-body border-top">
            <h5 class="card-title">Today's Record High</h5>
            <p class="card-text">
              A data visualization tool showcasing record high temperatures across U.S. cities. Built with .NET Core and HighCharts.
            </p>
            <a href="https://todaysrecordhigh.com" class="btn btn-primary">View Project</a>
          </div>
        </div>
      </div>

      <!-- Project Card 2 -->
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="/images/2025/mpls_coffee.png" alt="Best Coffee Shops In Minneapolis Locator" />
          <div class="card-body border-top">
            <h5 class="card-title">MPLS Coffee</h5>
            <p class="card-text">
              A mobile app helping users discover top-quality coffee shops in Minneapolis. Developed using React Native and Expo.
            </p>
            <a href="https://mplscoffee.com" class="btn btn-primary">View Project</a>
          </div>
        </div>
      </div>

      <!-- Project Card 5 -->
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="/images/2025/kexp.png" alt="KEXP Now Playing Browser Extension" />
          <div class="card-body border-top">
            <h5 class="card-title">KEXP Browser Extension</h5>
            <p class="card-text">
              A browser extension that displays the track, artist and album from the currently playing track on 90.3 KEXP
            </p>
            <a href="https://clintmcmahon.github.io/kexp-now-playing-extension/" class="btn btn-primary">View Project</a>
          </div>
        </div>
      </div>

       <!-- Project Card 5 -->
      <div class="col">
        <div class="card h-100 shadow-sm">
        <img src="/images/2025/attribute_editor.png" alt="Azure AD B2C Attribute Editor" />
          <div class="card-body border-top">
            <h5 class="card-title">Attribute Editor</h5>
            <p class="card-text">
              A user-friendly interface for managing Azure AD B2C custom user attributes without complex Graph API operations.
            </p>
            <a href="https://attributeeditor.com" class="btn btn-primary">View Project</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
