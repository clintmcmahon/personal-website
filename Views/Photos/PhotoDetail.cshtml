@model PhotoViewModel

@{
    ViewData["Title"] = Model.CurrentPhoto.Title + " | Clint McMahon";
}

<div class="container text-center mt-4" style="max-width: 1000px;">
    <div class="photo-header">
        <h1 class="fw-bold text-uppercase photo-title"><small>@Model.CurrentPhoto.Title</small></h1>
        <p class="photo-date"><em>@Model.CurrentPhoto.Date.ToString("MMMM dd, yyyy")</em></p>
    </div>

    <img src="@Model.CurrentPhoto.ImageUrl" class="img-fluid rounded shadow-lg" alt="@Model.CurrentPhoto.Title" title="@Model.CurrentPhoto.Title">

    <div class="mt-3 photo-detail">
        @Html.Raw(Model.CurrentPhoto.Content)
    </div>

    <div class="d-flex justify-content-between mt-4">
        @if (Model.PreviousPhoto != null)
        {
            <a href="/photos/@Model.PreviousPhoto.Slug" class="btn btn-outline-primary">&larr; Previous</a>
        }
        else
        {
            <div></div>
        }

        @if (Model.NextPhoto != null)
        {
            <a href="/photos/@Model.NextPhoto.Slug" class="btn btn-outline-primary">Next &rarr;</a>
        }
        else
        {
            <div></div>
        }
    </div>
</div>

